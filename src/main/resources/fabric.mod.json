{
	"schemaVersion": 1,
	"id": "tonic",
	"version": "${version}",
	"name": "tonic",
	"description": "Lua Script Interpreter for Minecraft Fabric.",
	"authors": [
		"haquire"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/tonic/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "com.tonic.Tonic",
				"adapter": "kotlin"
			}
		],
		"client": [
			"com.tonic.lua.api.Handler"
		]
	},
	"mixins": [
		"tonic.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~1.21.5",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}